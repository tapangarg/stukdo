<div class="panel panel-info">
	<div class="panel-heading">
		<%= link_to edit_task_path(task) do %>
		created <%= time_ago_in_words(task.created_at) %> ago
		<% end %>
	</div>
	<div class="panel-body"><%= task.content %> </div>
	
	<div class="panel-footer text-center">
		<% if task.state == "doing" %>
		<%= link_to "<<", change_task_path(task, state: "to_do"), class:"btn btn-primary", method: :put %>
		<%= link_to ">>", change_task_path(task, state: "done"), class:"btn btn-primary", method: :put %>
		<% elsif task.state == "to_do" %>
		<%= link_to ">>", change_task_path(task, state: "doing"), class:"btn btn-primary", method: :put %>
		<% else %>
		<%= link_to "<<", change_task_path(task, state: "doing"), class:"btn btn-primary", method: :put %>
	<% end %>

	</div>
</div>